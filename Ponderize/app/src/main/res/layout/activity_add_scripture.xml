<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.byui_cs.jjmn.ponderize.AddScriptureActivity">


    <EditText
        android:id="@+id/editScriptureReference"
        android:labelFor="@+id/editScriptureReference"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/reference"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/editScriptureText"
        android:layout_width="395dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintLeft_toLeftOf="@+id/editScriptureReference"
        app:layout_constraintRight_toRightOf="@+id/editScriptureReference"
        app:layout_constraintTop_toBottomOf="@+id/editScriptureReference"
        />

    <Button
        android:id="@+id/btnAddScripture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="addScriptureToList"/>
</android.support.constraint.ConstraintLayout>
